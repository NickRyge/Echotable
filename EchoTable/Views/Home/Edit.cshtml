@model PopoErEnLuder.Models.Post

@{
    ViewData["Title"] = "rediger";
}

<h1>Rediger opslag</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Header" class="control-label">Overskrift</label>
                <input asp-for="Header" class="form-control" />
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">Tekst</label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="imgAdress" class="control-label">Billedadresse</label>
                <input asp-for="imgAdress" class="form-control" />
                <span asp-validation-for="imgAdress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Godkend" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tilbage til opslagstavle</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
