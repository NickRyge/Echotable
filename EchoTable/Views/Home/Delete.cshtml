@model PopoErEnLuder.Models.Post

@{
    ViewData["Title"] = "Slet";
}

<h3>Er du sikker på du vil slette opslaget?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Overskrift
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Header)
        </dd>
        <dt class = "col-sm-2">
            Klokkeslæt
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Slet" class="btn btn-danger" /> |
        <a asp-action="Index">Tilbage til opslagstavlen</a>
    </form>
</div>
